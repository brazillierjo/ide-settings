{
  // --- Editor Settings ---
  // Font settings
  "editor.fontFamily": "'Monaspace Neon', 'Monaspace Krypton', Menlo, 'Fira Code', Menlo, JetBrains Mono, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": "'calt', 'liga', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08', 'ss09', 'cv01' 2, 'cv31' 1",

  // Formatting and Saving
  "editor.formatOnSave": true,

  // Explorer settings
  "workbench.activityBar.location": "top",
  "workbench.iconTheme": "catppuccin-frappe",
  "material-icon-theme.hidesExplorerArrows": true,

  // Display and Layout
  "editor.wordWrap": "on", // Wrap long lines
  "editor.renderWhitespace": "trailing", // Show trailing/leading whitespace
  "editor.guides.highlightActiveIndentation": true, // Highlight current indentation level
  "editor.minimap.enabled": false, // Hide the minimap
  "editor.stickyScroll.enabled": true, // Disable sticky scroll

  // --- File Settings ---
  "files.autoSave": "onFocusChange", // Auto-save files when focus changes
  "files.trimTrailingWhitespace": true, // Remove trailing whitespace on save
  "files.insertFinalNewline": true, // Ensure final newline on save
  "explorer.fileNesting.enabled": true, // Move activity bar to the top
  "workbench.navigationControl.enabled": false, // Hide navigation controls
  "workbench.layoutControl.enabled": false, // Hide layout controls
  "workbench.startupEditor": "none", // Don't open any editor on startup

  // Confirmation Dialogs
  "explorer.confirmDragAndDrop": false, // Disable drag and drop confirmation
  "explorer.confirmDelete": false, // Disable delete confirmation

  // --- Terminal Settings ---
  "terminal.integrated.fontFamily": "Monaspace Krypton",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorWidth": 3,
  "terminal.integrated.scrollback": 1000,

  // --- Git Settings ---
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,

  // --- Extension Settings ---
  // Prettier
  "prettier.configPath": "prettier.config.js",

  // TypeScript
  "typescript.updateImportsOnFileMove.enabled": "always",

  // --- Language Specific Settings ---
  // Default Formatter (using Prettier)
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // --- Other ---
  "json.schemas": [
  
  ],
  "terminal.integrated.stickyScroll.enabled": false,
  "workbench.colorTheme": "Catppuccin Macchiato",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.panel.showLabels": false
}
